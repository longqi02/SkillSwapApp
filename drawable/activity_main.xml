<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SkillSwap Home"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnViewSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View / Select Skill"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnCreateSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Skill Offer" />

        <Button
            android:id="@+id/btnFindMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Matching Skills"
            android:layout_marginTop="24dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarLoading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:indeterminate="true"/>

</FrameLayout>